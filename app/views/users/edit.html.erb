<%= stylesheet_link_tag    'user/edit', media: 'all', 'data-turbolinks-track': 'reload' %>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="edit_page">
  <div class='form edit_form'>
    <div class="form_title">
      <h3>編集</h3>
    </div>
    <hr>
    <%= form_for @user do |f|%>
      <div class="field">
        <div class='field_label'>
          <%= f.label :name %><span class='required'>必須</span>
        </div>
        <div class='field_area'>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'text_area'%>
        </div>
      </div>
      <div class="field">
        <div class='field_label'>
          <%= f.label :fav_brand %>
        </div>
        <div class="field_area">
          <%= f.text_field :fav_brand_1, value: @fav_brands[0], class:'text_area' %>
        </div>
      </div>
      <div class="field">
        <div class="field_area">
          <%= f.text_field :fav_brand_2, value: @fav_brands[1], class:'text_area' %>
        </div>
      </div>
      <div class="field">
        <div class="field_area">
          <%= f.text_field :fav_brand_3, value: @fav_brands[2], class:'text_area' %>
        </div>
      </div>
      <P class="form_btn update_btn"><%= f.submit "更新" %><p>
    <% end %>
  </div>
</div>
