<h1>show # shop</h1>
<%= render 'layouts/flash'%>

<% if @shop.images? %>
  <%= image_tag @shop.images_url %>
<% else %>
  <%= image_tag 'koeda.png' %>
<% end %>
<ul>
  <li> 
    <%= @shop.name %>
  </li>
  <li>
    <%= @shop.address %>
  </li>
  <li>
    <%= @shop.tel %>
  </li>
  <li>
    <%= @shop.business_period %>
  </li>
  <li>
    <%= @shop.information %>
  </li>
</ul>

  <h3>タグ</h3>
  <% @brands.each do |brand|%>
    <ul>
      <%= link_to tag_path(brand.id) do %>
        <li><%= brand.name %></li>
      <% end %>
    </ul>

  <% end %>

<h3>レビュー 一覧</h3>
<% @reviews.each do |review|%>
  <em>ユーザー名</em>
  <%= link_to user_path(review.user_id) do %>
    <%= review.user.name if review.user %><br>
  <% end %>
  <span>タイトル:</span>
  <%= review.title %><br>
  <span>コメント:</span>
  <%= review.comment %>
  <br>
  <%= link_to '全文見る',shop_review_path(@shop.id,review.id)%>



  <% if review.user_id == current_user.id %>
    <%= link_to '編集', edit_shop_review_path(@shop.id,review.id) %>
    <%= link_to '削除', shop_review_path(@shop.id,review.id),method: :delete %>
  <% end %>
  <hr>
<% end %>
<%= link_to "すべて見る(#{@shop.reviews.count})", shop_reviews_path(@shop.id) %>
<br>



<%= link_to 'コメントをする', new_shop_review_path(@shop.id) %>
<%= link_to '編集する', edit_shop_path(@shop.id)%>
<%= link_to '削除する', shop_path(@shop.id), method: :delete%>